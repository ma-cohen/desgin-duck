{
  "name": "design-duck",
  "version": "0.1.0",
  "description": "Requirements gathering and management tool",
  "type": "module",
  "main": "dist/cli.js",
  "bin": {
    "design-duck": "dist/cli.js"
  },
  "files": [
    "dist/",
    "dist-ui/"
  ],
  "scripts": {
    "build": "bun run build:cli && bun run build:ui",
    "build:cli": "bun build src/cli.ts --outdir=dist --target=bun",
    "build:ui": "bunx vite build",
    "start": "bun run src/cli.ts",
    "dev:ui": "bunx vite --open",
    "test": "bun test"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "requirements",
    "yaml",
    "cli"
  ],
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@types/js-yaml": "^4.0.9",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "bun-types": "latest",
    "js-yaml": "^4.1.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.0.0",
    "vite": "^7.3.1",
    "zustand": "^5.0.10"
  }
}
